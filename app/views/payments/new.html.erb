<%= simple_form_for [Payment.new] do |f| %>
  <%= f.association :credit_card, label: 'Cartão de Crédito' %>
  <%= f.association :buyer, label: 'Comprador' %>
  <%= f.input :date, as: :date, html5: true, label: 'Data' %>
  <%= f.association :category, label: 'Categoria' %>
  <%= f.input :description, label: 'Descrição' %>
  <%= f.input :amount, label: 'Valor' %>
  <!-- <= f.input :due_date, as: :date, html5: true, label: 'Due' %> -->
  <!-- <= f.input :partial, label: 'Partial' %> -->
  <%= f.input :total_partial, label: 'Parcelamento' %>
  <%= f.input :comment, label: 'Comentário' %>
  <%= f.submit "File It", class: 'btn btn-primary btn-lg btn-block' %>
<% end %>