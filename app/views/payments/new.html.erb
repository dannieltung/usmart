<%= simple_form_for [Payment.new] do |f| %>
  <%= f.association :credit_card, label: 'Credit Card' %>
  <%= f.association :buyer, label: 'From' %>
  <%= f.input :date, as: :date, html5: true, label: 'Date' %>
  <%= f.association :category %>
  <%= f.input :description, label: 'Description' %>
  <%= f.input :amount, label: 'Amount' %>
  <%= f.input :due_date, as: :date, html5: true, label: 'Due' %>
  <!-- <= f.input :partial, label: 'Partial' %> -->
  <%= f.input :total_partial, label: '# of Payments' %>
  <%= f.input :comment, label: 'Comment' %>
  <%= f.submit "File It", class: 'btn btn-primary btn-lg btn-block' %>
<% end %>