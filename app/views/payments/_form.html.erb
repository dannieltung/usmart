<div class="div-to-align">
  <%= simple_form_for @payment do |f| %>
    <%# if CreditCard.where(user_id: current_user.id).count >= 2 %>
    <%= link_to icon("fas", "plus-circle"), new_credit_card_path %>
    <div class="row">
      <div class="col-4">
        <%= f.association :credit_card, collection: CreditCard.order('name ASC'), label: 'Cartão de Crédito' %>
      </div>
    </div>
    <%# end %>
    <% if Buyer.where(user_id: current_user.id).count >= 1 %>
      <div class="row">
        <div class="col-4">
          <%= f.association :buyer, collection: Buyer.order('name ASC'),label: 'Comprador' %>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="col-4">
        <%= f.input :date, as: :date, html5: true, label: 'Data' %>
      </div>
    </div>
    <%= link_to icon("fas", "plus-circle"), new_category_path %>
    <div class="row">
      <div class="col-4">
        <%= f.association :category, collection: Category.order('name ASC'),label: 'Categoria' %>
      </div>
    </div>
    <div class="row">
      <div class="col-4">
        <%= f.input :description, label: 'Descrição' %>
      </div>
    </div>
    <div class="row">
      <div class="col-4">
        <%= f.input :amount, label: 'Valor' %>
      </div>
    </div>
    <div class="row">
      <div class="col-4">
        <%= f.input :total_partial, label: '# de Parcelas' %>
      </div>
    </div>
    <div class="row">
      <div class="col-4">
        <%= f.input :comment, label: 'Comentário' %>
      </div>
    </div>
    <div class="row">
      <div class="col-4">
        <%= f.submit "Salvar", class: 'btn btn-success btn-lg btn-block' %>
      </div>
    </div>
  <% end %>
</div>