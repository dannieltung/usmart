<div class="container">
  <h1>Salvar novo Comprador</h1>
</div>
<%= render 'form' %>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nome</th>
    </tr>
  </thead>
  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= link_to buyer.name.titleize, edit_buyer_path(buyer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>