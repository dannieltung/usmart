<section class="introducao container">
  <section>
    <p><%= number_to_currency(@stocks, unit: 'R$ ', separator: ',', delimiter: '.') %></p>
    <p><%= number_to_currency(@incomes, unit: 'R$ ', separator: ',', delimiter: '.') %></p>
  </section>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Quantidade</th>
        <th scope="col">Valor</th>
        <th scope="col">Tarifas</th>
        <th scope="col">Total</th>
      </tr>
    </thead>
    <tbody>
      <% @ativos.each do |ativo| %>
        <tr>
          <td><%= link_to ativo.nome, ativo_path(ativo) %></td>
          <td><%= ativo.quantidade %></td>
          <td><%= number_to_currency(ativo.preco, unit: 'R$ ', separator: ',', delimiter: '.') %></td>
          <td><%= number_to_currency(ativo.emolumentos, unit: 'R$ ', separator: ',', delimiter: '.') %></td>
          <td><%= number_to_currency(ativo.total, unit: 'R$ ', separator: ',', delimiter: '.') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>