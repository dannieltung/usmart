<section class="container introducao">
  <%= render 'form' %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Quantidade</th>
        <th scope="col">Pre√ßo</th>
        <th scope="col">Tarifas</th>
      </tr>
    </thead>
    <tbody>
      <% @ativos.each do |ativo| %>
        <tr>
          <td><%= ativo.nome %></td>
          <td><%= ativo.quantidade %></td>
          <td><%= number_to_currency(ativo.preco, unit: 'R$ ', separator: ',', delimiter: '.') %></td>
          <td><%= number_to_currency(ativo.emolumentos, unit: 'R$ ', separator: ',', delimiter: '.') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>