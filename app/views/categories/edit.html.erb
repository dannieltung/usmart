<p>Total da categoria PAGOS naquele mês de fatura</p>
<br>
<div class="show-center">
  <h1>Total: <%= "#{number_to_currency(@total_amount)} em #{@payment.month_date}" %></h1>
  <p>
    <%= simple_form_for [@user, @category],
      wrapper: :inline_form,
      html: { class: "form-inline" },
      wrapper_mappings: {
        boolean: :inline_boolean
      } do |f| %>
      <%= f.input :name, hint: "Nome", input_html: { class: "mb-2 mr-sm-2" } %>
      <%= f.submit 'Update', class: 'btn btn-success btn-lg mb-2' %>
    <% end %>
  </p>
</div>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Cartão</th>
      <th scope="col">Data</th>
      <th scope="col">Descrição</th>
      <th scope="col">Valor</th>
      <th scope="col">Parcela</th>
      <th scope="col"># de Parcelas</th>
      <th scope="col">Comentário</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.credit_card.name %></td>
        <td><%= payment.date.strftime('%d/%m/%y') %></td>
        <td><%= payment.description %></td>
        <td><%= number_to_currency(payment.amount) %></td>
        <td><%= payment.partial %></td>
        <td><%= payment.total_partial %></td>
        <td><%= payment.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>