<div class="main-container">
  <div class="form">
    <%= simple_form_for [Payment.new] do |f| %>
      <%= f.association :credit_card, label: 'Cartão de Crédito' %>
      <%= f.association :buyer, label: 'Comprador' %>
      <%= f.input :date, as: :date, html5: true, label: 'Data' %>
      <%= f.association :category, label: 'Categoria' %>
      <%= f.input :description, label: 'Descrição' %>
      <%= f.input :amount, label: 'Valor' %>
      <!-- <= f.input :due_date, as: :date, html5: true, label: 'Due' %> -->
      <!-- <= f.input :partial, label: 'Partial' %> -->
      <%= f.input :total_partial, label: 'Parcelamento' %>
      <%= f.input :comment, label: 'Comentário' %>
      <%= f.submit "File It", class: 'btn btn-primary btn-lg btn-block' %>
    <% end %>
  </div>
  <br>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Cartão de Crédito</th>
        <th scope="col">Comprador</th>
        <th scope="col">Data</th>
        <th scope="col">Categoria</th>
        <th scope="col">Descrição</th>
        <th scope="col">Valor</th>
        <th scope="col">Vencimento</th>
        <th scope="col">Parcela</th>
        <th scope="col">Total Parcelas</th>
        <th scope="col">Comentário</th>
      </tr>
    </thead>
    <tbody>
      <% @payments.each do |payment| %>
        <tr>
          <td><%= payment.credit_card.name %></td>
          <td><%= payment.buyer.name %></td>
          <td><%= payment.date.strftime('%d/%m') %></td>
          <td><%= payment.category.name %></td>
          <td><%= payment.description %></td>
          <td><%= number_to_currency(payment.amount) %></td>
          <td><%= payment.due_date.strftime('%d/%m/%y') %></td>
          <td><%= payment.partial %></td>
          <td><%= payment.total_partial %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>