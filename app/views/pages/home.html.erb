<div class="main-container">
  <div class="form">
    <%= simple_form_for [Payment.new] do |f| %>
      <%= f.association :credit_card, label: 'Credit Card' %>
      <%= f.association :buyer, label: 'From' %>
      <%= f.input :date, as: :date, html5: true, label: 'Date' %>
      <%= f.association :category %>
      <%= f.input :description, label: 'Description' %>
      <%= f.input :amount, label: 'Amount' %>
      <%= f.input :due_date, as: :date, html5: true, label: 'Due' %>
      <!-- <= f.input :partial, label: 'Partial' %> -->
      <%= f.input :total_partial, label: '# of Payments' %>
      <%= f.input :comment, label: 'Comment' %>
      <%= f.submit "File It", class: 'btn btn-primary btn-lg btn-block' %>
    <% end %>
  </div>
  <br>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Credit Card</th>
        <th scope="col">From</th>
        <th scope="col">Date</th>
        <th scope="col">Category</th>
        <th scope="col">Description</th>
        <th scope="col">Amount</th>
        <th scope="col">Due</th>
        <th scope="col">Partial</th>
        <th scope="col">Total Partial</th>
        <th scope="col">Comment</th>
      </tr>
    </thead>
    <tbody>
      <% @payments.each do |payment| %>
        <tr>
          <td><%= payment.credit_card.name %></td>
          <td><%= payment.buyer.name %></td>
          <td><%= payment.date.strftime('%d/%m') %></td>
          <td><%= payment.category.name %></td>
          <td><%= payment.description %></td>
          <td><%= number_to_currency(payment.amount) %></td>
          <td><%= payment.due_date.strftime('%d/%m/%y') %></td>
          <td><%= payment.partial %></td>
          <td><%= payment.total_partial %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>